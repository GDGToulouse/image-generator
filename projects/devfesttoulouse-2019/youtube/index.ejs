<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://fonts.googleapis.com/css?family=Comfortaa:400,700"
      rel="stylesheet"
    />
  </head>
  <style>
    body {
      margin: 0;
    }
    section {
      display: block;
      position: relative;
      background-size: contain;
      width: <%= config.viewport.width %>px;
      height: <%= config.viewport.height %>px;
      background-image: url("background.jpg");
    }
    .container {
      position: absolute;
      top: 22%;
      left: 9%;
      right: 32%;
      bottom: 10%;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    .text h1 {
      font-family: "Comfortaa", cursive;
      text-align: center;
      margin: 10px;
    }
    .speaker-container {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
    }
    .speaker {
      text-align: center;
      margin: 0 20px;
    }
    .speaker img {
      width: 230px;
      border-radius: 100%;
      border: 4px solid white;
    }
    .speaker h3 {
      font-family: "Comfortaa", cursive;
      font-weight: bolder;
      margin: 10px;
    }
  </style>
  <body>
    <% items.forEach(function(talk){ %>
    <section>
      <div class="container">
        <div class="text">
          <h1 style="font-size: <% if (talk.fontSize) { %><%= talk.fontSize %><% } else {%>80px<% } %>"><%= talk.title %></h1>
        </div>
        <div class="speaker-container">
          <% talk.speakers.forEach(function(speaker){ %>
            <div class="speaker">
              <img src="<%= speaker.photo %>" />
              <h3 style="font-size: <% if (talk.fontSize) { %><%= speaker.fontSize %><% } else {%>30px<% } %>"><%= speaker.name %></h3>
            </div>
          <% }); %>
        </div>
      </div>
    </section>
    <% }); %>
    <script src="/reload/reload.js"></script>
  </body>
</html>
