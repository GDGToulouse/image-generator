<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Page Title</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://fonts.googleapis.com/css?family=Comfortaa:400,700" rel="stylesheet" />
</head>
<style>
  body {
    margin: 0;
  }

  section {
    display: block;
    position: relative;
    background-size: contain;
    width: <%=config.viewport.width %>px;
    height: <%=config.viewport.height %>px;
    background-image: url("background.jpg");
  }

  .container {
    position: absolute;
    top: 170px;
    left: 450px;
    right: 367px;
    bottom: 53px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 30px;
  }

  .meta {
    font-family: "Comfortaa", cursive;
    text-align: left;
    margin: 10px;
    color: #673ab7;
    font-weight: bold;
    font-size: 50px;
  }

  .title {
    font-family: "Comfortaa", cursive;
    text-align: left;
    margin: 10px;
    line-height: 80px;
    font-size: 50px;
    text-transform: uppercase;
  }

  .speaker-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .speaker {
    text-align: center;
    margin: 0 20px;
  }

  .speaker img {
    width: 200px;
    border-radius: 100%;
    border: 6px solid #673ab7;
  }

  .speaker h3 {
    font-family: "Comfortaa", cursive;
    font-weight: bolder;
    margin: 10px;
    font-size: 30px;
  }
</style>

<body>
  <% items.forEach(function(talk){ %>
  <section>
    <div class="container">
      <h3 class="meta">
        <small><%= talk.type %></small> <br /> <%= talk.category %>
      </h3>
      <h1 class="title" style="font-size: <% if (talk.fontSize) { %><%= talk.fontSize %><% } %>">
        <%= talk.title %>
      </h1>
      <div class="speaker-container">
        <% talk.speakers.forEach(function(speaker){ %>
        <div class="speaker">
          <img src="<%= speaker.photo %>" />
          <h3 style="font-size: <% if (talk.fontSize) { %><%= speaker.fontSize %><% } %>">
            <%= speaker.name %></h3>
        </div>
        <% }); %>
      </div>
    </div>
  </section>
  <% }); %>
  <script src="/reload/reload.js"></script>
</body>

</html>